<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <com.example.peter.memorygame.TileView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.peter.memorygame.TileView
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tile1.1"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/question" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tile1.2"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/question" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tile1.3"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/question" />
        </com.example.peter.memorygame.TileView>

        <com.example.peter.memorygame.TileView
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tile2.1"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/question" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tile2.2"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/question" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tile2.3"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/question" />
        </com.example.peter.memorygame.TileView>

        <com.example.peter.memorygame.TileView
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tile3.1"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/question" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tile3.2"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/question" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tile3.3"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/question" />
        </com.example.peter.memorygame.TileView>

        <com.example.peter.memorygame.TileView
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tile4.1"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/question" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tile4.2"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/question" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tile4.3"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/question" />
        </com.example.peter.memorygame.TileView>
    </com.example.peter.memorygame.TileView>


</RelativeLayout>
